<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FanficMobileVersion.Views.RegistartionPage">
    <ContentPage.Content>
        <StackLayout Margin="20" Orientation="Vertical" VerticalOptions="CenterAndExpand">
            <!-- Place new controls here -->
            <Entry x:Name="MyUserName" Placeholder="UserName" Keyboard="Text"/>

            <Entry x:Name="MyUserEmail" Placeholder="Email" Keyboard="Email"/>
            
            <Entry x:Name="MyUserPassword" Placeholder="Password" IsPassword="True"/>
            
            <Button Text="Registration" Clicked="Button_Clicked" BackgroundColor="Black" TextColor="White" Margin="30"/>            
            </StackLayout>        
    </ContentPage.Content>
</ContentPage>